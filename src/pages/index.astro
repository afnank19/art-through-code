---
import Card from '../components/card.astro'
import Layout from '../layouts/Layout.astro'
import '../styles/global.css'
---

<Layout>
	<header class="border">
		<div class="flex justify-between items-center">
			<div class="flex flex-1">
				<img src="/favicon.svg" alt="Art through code logo"/>
				<h1 class="text-5xl p-2 font-medium">ART THROUGH CODE</h1>
			</div>
			<a href="https://github.com/afnank19">
				<img src="/github.svg" class="h-8 pr-4 opacity-55 hidden sm:block" alt="github logo" />
			</a>
		</div>
		<h2 class="text-lg  p-2">A collection of stunning visuals made using shaders</h2>
	</header>
	<div class="flex border border-t-0">
		<div class=" flex-1/3"></div>
		<div class="py-1 bg-[#acacac] flex-1/3 text-center text-black flex items-center justify-center font-bold">
			BY AFNAN
		</div>
		<div class=" flex-1/3"></div>
	</div>
	<main class="flex flex-wrap border border-y-0 pt-8 px-4">
		<Card title={"String Theory"} src={"/swirl.webp"} />
		<Card title={"Chroma"} src={"/colors.webp"} />
		<Card title={"Tangerine"} src={"/tangerine.webp"} />
		<Card title={"SDFS"} src={"/sdfs.webp"} />
		<Card title={"Shade"} src={"/shade.webp"} />
		<Card title={"Learn"} src={"/learn.webp"} />
	</main>
	<footer class="border border-t-0 p-2 pt-16 text-sm">
		<div class="flex gap-12 items-center justify-center">
			[
			<a href="https://afnank19.pages.dev/" class="hover:bg-neutral-600">01. PORTFOLIO</a>
			<a href="https://github.com/afnank19" class="hover:bg-neutral-600">02. GITHUB</a>
			<a href="https://www.instagram.com/afnank194/" class="hover:bg-neutral-600">03. INSTAGRAM</a>
			]
		</div>
	</footer>
</Layout>